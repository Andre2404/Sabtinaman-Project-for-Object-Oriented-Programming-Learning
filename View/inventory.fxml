<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #D0F0C0;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.InventoryController">
   <children>
      <AnchorPane layoutX="35.0" layoutY="31.0" prefHeight="55.0" prefWidth="58.0" style="-fx-background-color: #043927; -fx-background-radius: 10;">
         <children>
            <ImageView fitHeight="47.0" fitWidth="41.0" layoutX="9.0" layoutY="5.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../pictures/Inventory.png" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
      <Label layoutX="102.0" layoutY="35.0" text="Inventory">
         <font>
            <Font name="System Bold" size="32.0" />
         </font>
      </Label>
      <ImageView fitHeight="202.0" fitWidth="277.0" layoutX="529.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Pictures/Sider.png" />
         </image>
      </ImageView>
      <Button fx:id="back" layoutX="678.0" layoutY="35.0" mnemonicParsing="false" onAction="#handleBackButton" prefHeight="21.0" prefWidth="92.0" style="-fx-background-color: #043927;" text="Back" textFill="#d0f0c0">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
      <ScrollPane layoutX="35.0" layoutY="101.0" prefHeight="400.0" prefWidth="600.0">
         <content>
            <TableView fx:id="tableInventory" onMouseClicked="#handleTableClick" prefHeight="400.0" prefWidth="600.0">
