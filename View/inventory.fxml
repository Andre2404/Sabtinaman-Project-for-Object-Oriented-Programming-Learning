                <TableColumn fx:id="colNamaAlat" prefWidth="150.0" text="Nama Alat" />
                <TableColumn fx:id="colTanggalSewa" prefWidth="150.0" text="Tanggal Sewa" />
                  <TableColumn fx:id="colTanggalKembali" prefWidth="150.0" text="Batas Peminjaman" />
                  <TableColumn fx:id="colStatus" prefWidth="150.0" text="Status" />
              </columns>
            </TableView>
         </content>
      </ScrollPane>
      <Button fx:id="btnKA" layoutX="54.0" layoutY="543.0" mnemonicParsing="false" onAction="#handlePengembalianAlat" prefHeight="25.0" prefWidth="120.0" style="-fx-background-color: #043927;" text="Kembalikan Alat" textFill="#d0f0c0">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
      <Button fx:id="btnLK" layoutX="200.0" layoutY="543.0" mnemonicParsing="false" onAction="#handleLaporkanKeluhan" prefHeight="25.0" prefWidth="120.0" style="-fx-background-color: #043927;" text="Laporkan Keluhan" textFill="#d0f0c0">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
      <ImageView fitHeight="150.0" fitWidth="150.0" layoutX="635.0" layoutY="462.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../pictures/Mascot2.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
